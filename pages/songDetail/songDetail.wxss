/* pages/songDetail/songDetail.wxss */
.songDetailContainer{
  background: rgba(0, 0, 0, 0.5);
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 摇杆的层级要比磁盘高 */
.circle{
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #fff;
  margin: 10rpx 0;
}
.needle{
  z-index: 99;
  position: relative;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
}
.discContainer{
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
.discContainer .disc{
  width: 598rpx;
  height: 598rpx;
}
.musicImg{
  width: 370rpx;
  height: 370rpx;
  border: 50%;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
}
