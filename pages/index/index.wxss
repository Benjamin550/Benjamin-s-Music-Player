/* pages/index/index.wxss */
.banners{
  width: 100%;
  height: 300rpx;

}
.banners image{
  width: 100%;
  height: 100%;
}
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.iconfont{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240,19,19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.navItem text:nth-child(2){
  font-size: 26rpx;
}
/* 推荐歌曲 */
.recommendContainer{
  padding: 20rpx;
}
.recommendContainer .header .title{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.recommendContainer .header .more{
  float: right;
  border: 1px solid #333;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

/* 推荐内容区域 */
.recommendScroll{
  display: flex;
  margin-top: 20rpx;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 用省略号代替 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* display: block; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 设置对其模式       设置多行的行数 */
  -webkit-line-clamp: 2;
  text-align: center;
}
/* 排行榜 */
.TopList{
  padding: 20rpx;
} 
.TopListSwiper{
  height: 400rpx;
}
.swiperItem .title{
  line-height: 80rpx;
  font-size: 30rpx;
}
.swiperItem{
  width: 96%;
  background: #fbfbfb;
}
.musicItem{
  display: flex;
  /* 一个元素设置成flex 其子元素自动成为block元素 */
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count{
  height: 100rpx;
  width: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
